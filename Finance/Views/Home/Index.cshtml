@model Finance.ViewModels.FinancialDashboardViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0 row">
    <div class="w-75 mb-3">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="d-flex gap-2">
                    <h5 class="card-title">Despesas</h5>
                    <span class="material-symbols-outlined">
                        finance_mode
                    </span>
                </div>

                <div class="d-flex">
                    <a class="nav-link" href="@Url.Action("Create", "FinancialGoals")" data-bs-toggle="tooltip" data-bs-title="Add Despesa Temporária">
                        <span class="material-symbols-outlined">
                            calendar_add_on
                        </span>
                    </a>
                    <a class="nav-link" href="@Url.Action("Index", "Transaction")" data-bs-toggle="tooltip" data-bs-title="Add Despesa Fixa">
                        <span class="material-symbols-outlined">
                            add_box
                        </span>
                    </a>
                </div>

            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Value</th>
                        <th>Day</th>
                        <th>Pago</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.Description</td>
                            <td>@transaction.Value</td>
                            <td>@transaction.Day</td>
                            <td>
                                @{
                                    if (transaction.IsPaidThisMonth)
                                    {
                                        <span class="material-symbols-outlined">
                                            check
                                        </span>
                                    }
                                    else
                                    {
                                        @:Não
                                    }
                                }
                            </td>
                            <td>
                                @if (!transaction.IsPaidThisMonth)
                                {
                                    <form asp-action="PayTransaction" method="post">
                                        <input type="hidden" name="id" value="@transaction.Id" />
                                        <button type="submit" class="btn btn-success">Pagar</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }

                    @foreach (var goal in Model.FinancialGoals)
                    {
                        if (goal.Status == "Pagando")
                        {
                            <tr>
                                <td>@goal.Name</td>
                                <td>@goal.InstallmentValue</td>
                                <td>@goal.CreatedOn.ToString("dd/MM")</td>
                                <td>
                                    @{
                                        if (goal.IsPaidThisMonth)
                                        {
                                            <span class="material-symbols-outlined">
                                                check
                                            </span>
                                        }
                                        else
                                        {
                                            @:Não
                                        }
                                    }
                                </td>
                                <td>
                                    @if (!goal.IsPaidThisMonth)
                                    {
                                        <form asp-action="PayInstallment" method="post">
                                            <input type="hidden" name="id" value="@goal.Id" />
                                            <button type="submit" class="btn btn-success">
                                                Pagar
                                                <span class="material-symbols-outlined">
                                                    savings
                                                </span>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="w-25">

        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col mt-0">
                        <h5 class="card-title">Total de Despesas</h5>
                    </div>

                    <div class="col-auto">
                        <div class="stat text-primary">
                            <span class="material-symbols-outlined">
                                attach_money
                            </span>
                        </div>
                    </div>
                </div>
                <h1 class="mt-1 mb-3">@Model.TotalExpenses.ToString("C")</h1>
                <div class="mb-0">
                    <span class="">
                        <span class="material-symbols-outlined">
                            finance_mode
                        </span>3.65%
                    </span>
                    <span class="text-muted">Since last week</span>
                </div>
            </div>
        </div>

        <div class="card">

            <div class="card-header d-flex">
                <h5>
                    Planejamento de Compra
                </h5>
                <a class="rounded-pill bg-secondary badge text-bg-info h-25 w-auto" href="@Url.Action("Create", "Wishes")">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                </a>

            </div>

            <div class="list-group">
                @foreach (var wish in Model.Wishes)
                {
                    @if (wish.IsCompleted == false)
                    {
                        <a href="@Url.Action("Details", "Wishes", new { id = wish.Id })" class="list-group-item list-group-item-action" aria-current="true">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@wish.Name</h5>
                                <small>@wish.Status</small>
                            </div>
                            <p class="mb-1">@wish.Amount.ToString("C")</p>
                        </a>
                         
                    }
                }

            </div>

        </div>

    </div>
    <div class="w-75">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="d-flex gap-2">
                    <h5 class="card-title">Contas pagando</h5>
                        <span class="material-symbols-outlined">
                            paid
                        </span>
                </div>
                <a class="nav-link" href="@Url.Action("Create", "FinancialGoals")">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                </a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width:20%;">Name</th>
                        <th style="width:25%">Termino Previsto</th>
                        <th class="d-none d-md-table-cell" style="width:25%">Parcelas</th>
                        <th>Description</th>
                        <th>Pago</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var goal in Model.FinancialGoals)
                    {
                        if (goal.Status == "Pagando")
                        {
                            <tr>
                                <td>@goal.Name</td>
                                <td>@goal.EstimatedCompletion?.ToString("dd/MM")</td>
                                <td class="d-none d-md-table-cell">@goal.ParcelaAtual/@goal.Parcelas</td>
                                <td>@goal.Description</td>
                                <td>
                                    @{
                                        if (goal.IsPaidThisMonth)
                                        {
                                            <span class="material-symbols-outlined">
                                                check
                                            </span>
                                        }
                                        else
                                        {
                                            @:Não
                                        }
                                    }
                                </td>
                                <td>
                                    @if (!goal.IsPaidThisMonth)
                                    {
                                        <form asp-action="PayInstallment" method="post">
                                            <input type="hidden" name="id" value="@goal.Id" />
                                            <button type="submit" class="btn btn-success">
                                                Pagar
                                                <span class="material-symbols-outlined">
                                                    savings
                                                </span>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="w-25">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="d-flex gap-2">
                <h5 class="card-title">Contas a pagar</h5>
                    <span class="material-symbols-outlined">
                        money_off
                    </span>
                </div>
                <a class="nav-link" href="@Url.Action("Create", "FinancialGoals")">
                    <span class="material-symbols-outlined">
                        add
                    </span>
                </a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var goal in Model.FinancialGoals)
                    {
                        if (goal.Status != "Pagando")
                        {
                            <tr>
                                <td>@goal.Name</td>
                                <td>@goal.Status</td>
                                <td>@goal.Amount</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}