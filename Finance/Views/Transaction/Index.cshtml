@model Finance.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Transactions";
}

<h2>Transactions</h2>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h3>Incomes</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Value</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var income in Model.Incomes)
                    {
                        <tr>
                            <td>@income.Description</td>
                            <td>@income.Value.ToString("C")</td>
                            <td>@income.Day</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@income.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@income.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Expenses</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Value</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.Description</td>
                            <td>@expense.Value.ToString("C")</td>
                            <td>@expense.Day</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@expense.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@expense.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <h3>Add Transaction</h3>
            <form asp-action="CreateTransaction" method="post">
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="Description">
                </div>
                <div class="mb-3">
                    <label for="value" class="form-label">Value</label>
                    <input type="number" class="form-control" id="value" name="Value" step="0.01">
                </div>
                <div class="mb-3">
                    <label for="day" class="form-label">Date</label>
                    <input type="string" class="form-control" id="day" name="Day">
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type</label>
                    <select class="form-control" id="type" name="Type">
                        <option value="Income">Income</option>
                        <option value="Expense">Expense</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add Transaction</button>
            </form>
        </div>
    </div>
</div>
